<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/black">
    <com.ashman.fivehundredpx.FullImageViewContainer
            android:id="@+id/fullpic_container"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone" />
    <LinearLayout
            android:id="@+id/fullpic_loadingLayout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
        <ProgressBar
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal" />
        <TextView
                android:id="@+id/fullpic_loadingText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="@string/fullpic_downloading" />
    </LinearLayout>
    <TextView
            android:id="@+id/fullpic_errorText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:orientation="vertical" />
</RelativeLayout>